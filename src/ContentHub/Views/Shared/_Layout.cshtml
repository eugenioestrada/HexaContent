<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HexaContent</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HexaContent.ContentHub.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
</head>
<body>
    <header>
        <span class="header-name">@ViewData["Title"]</span>
        <div class="actions">
            @RenderSection("Actions", required: false)
        </div>
    </header>

    <main>
        @RenderBody()
    </main>

    <aside>
        <span class="header-name">HexaContent</span>

        <nav>
            <ul>
                <li class="active">
                    <i class="icon material-symbols-outlined">full_coverage</i>
                    Contenidos
                </li>
                <li>
                    <i class="icon material-symbols-outlined">library_books</i>
                    Secciones
                </li>
                <li>
                    <i class="icon material-symbols-outlined">hub</i>
                    Temas
                </li>
                <li>
                    <i class="icon material-symbols-outlined">groups</i>
                    Redacción
                </li>
                <li>
                    <i class="icon material-symbols-outlined">brand_awareness</i>
                    Agencias
                </li>
                <li>
                    <i class="icon material-symbols-outlined">settings</i>
                    Configuraci&oacute;n
                </li>
            </ul>
        </nav>

        @RenderSection("Aside", required: false)
    </aside>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
