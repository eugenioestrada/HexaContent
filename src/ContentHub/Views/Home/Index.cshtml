@model HexaContent.ContentHub.Models.HomeModel

<h1>
    Welcome to Content Hub
</h1>

@if (Model.Articles != null && Model.Articles.Any())
{
    <ul>
        @foreach (var article in Model.Articles)
        {
            <li>
                <h2>@article.Title</h2>
                <p>@article.Content</p>
                <p><em>By @article.Author.Name on @article.UpdatedAt.ToString("MMMM dd, yyyy")</em></p>
                <a asp-action="Edit" asp-route-id="@article.Id">Edit</a>
            </li>
        }
    </ul>
}
else
{
    <p>No articles available.</p>
}
